print("o numero escolhido foi:", escolhendo)


# criando um simples game/jogo de adivinhaçao usando o ramdom

print("jogo de adivinhaçao, acerte o numero!")

usuario_escolhe = int(input("esolha um numero entre 10 e 100:"))

# chamando e utilizando o ramdom na variavel roleta escolha
roleta_escolha = random.randint(10 , 100)

# usando as condiçeos if e else para validar a escolha do usuario

if usuario_escolhe == roleta_escolha:
    print("voçe acertou parabens !!")
else:
    print("voçe errou ! joge novamente!", roleta_escolha)

# colocando em pratica as funçoes while do python 

senha_correta = "andre123"

senha = ""

while senha != senha_correta:
    senha = input("Digite a senha: ")
    if senha == senha_correta:
        print("Login feito com exito!")
    else:
        print("senha incorreta por favor digite novamente!")


# implementando um  limitador de gastos 


o_que_gastei = 0
gastos = 0

while gastos < 100:
    o_que_gastei = float(input("valor gastos por mim até o momento: "))
    gastos = o_que_gastei + gastos
else:
    print("voce gastou atingiu o limite de gastos")
    print("voce gastou no total de", gastos, "R$")

# usando o for para mostrar a tabuada

tabuada = int(input("Digite qualquer numero:"))

for numero in range(11):
    resultado_tabuada = tabuada * numero
    print(f" aqui está o resultado:{tabuada} x {numero} = {resultado_tabuada}")


# usando o for e range para calculo de notas

soma_das_notas = 0

for i in range(4):
    digitando_as_notas = float(input(f"digite as notas{i + 1} :"))

    soma_das_notas += digitando_as_notas

    media_final = soma_das_notas/4

    print("a sua media e", media_final)


# for e enumerate

paises = ["Brasil", "Alemanha", "Turquia", "Espanha"]   

for pais, posicao in enumerate(paises):
    print("Aqui está a posiçao correta :", pais ,posicao)


# for e range  para gastos 

gastos = 0

for a in range (5):
    compra = float(input(f"digite valor da compra{a + 1}:"))
    
    gastos +=compra
    
    total = gastos + 1
    
    print("o valor total e de:",total)