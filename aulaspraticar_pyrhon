# usando a funçao def para saber se o usuário e maior de idade ou não

def marioridade(idade):
    if idade >= 18:
        return "voce e maior de idade possui mais de 18 anos"
    elif idade == 18:
        return "voce maior de idade e 18 anos"
    elif idade < 18:
        return "voce e menor de idade não possui 18 anos"
    else:
        return "erro digite novamente!"

digitar_idade = int(input("Digite a sua idade: "))
resultado = marioridade(digitar_idade)
print(resultado)

# somador de media usando o def 

def somar_media(media):
   if  media == 6:
     return "na media aprovado"
   elif media > 6:
       return " aprovado"
   elif media < 6:
       return "reprovado"
   else:
       return " erro digite novamente"
   
nota1 = int(input("digite a primeira nota: "))
nota2 = int(input("digite a segunda nota: "))
nota3 = int(input("digite a terceira nota: "))

somatoria = (nota1+nota2+nota3)/3

resultado = somar_media(somatoria)

print(resultado, "A sua nota e:", somatoria)


def soma( a, b): 
    return a + b 
numero1 = 1
numero2 = 2

resultado_conta = soma(numero1, numero2)
print("O REsultado final da soma de", resultado_conta)


# usando o for para transformar a primeira palavra em letra maiuscula da variavel nomes

nomes = ["andre", "pedro", "joao", "carina", "danilo"]


for nome in nomes:
    print(nome.capitalize())
 


# utilizando o for novamente porem com a opçao input para o usúario digitar qualquer nome

primeiro = input("Digite o primeiro nome:")
segundo = input("Digite o segundo nome: ")
terceiro = input("Digite o terceiro nome:")

salvar = primeiro, segundo, terceiro


for item in salvar:
    print(item.capitalize())

# programa para descubrir o imc de uma pessoa atraves do peso e altura da pessoa.
# usando novamente a funçao def.

def funcao(imc):
    if imc < 16:
        return "Abaixo do peso muito grave (alto risco para a saúde)"
    elif 16 <= imc < 17:
        return "Abaixo do peso grave"
    elif 17 <= imc < 18.5:
        return "Abaixo do peso"
    elif 18.5 <= imc < 25:
        return "Peso normal (baixo risco)"
    elif 25 <= imc < 30:
        return "Sobrepeso (risco aumentado)"
    elif 30 <= imc < 35:
        return "Obesidade grau I (risco moderado)"
    elif 35 <= imc < 40:
        return "Obesidade grau II (grave - risco alto)"
    else:  
        return "Erro no sistema digite novamente!"
    
peso = float(input("digite o peso: "))
altura = float(input("digite a altura: "))

imc = peso/(altura * altura)

resultado = funcao(imc)

print(f"O seu imc é de: {imc:.2f}")
print("A classificaçao é de: ", resultado)